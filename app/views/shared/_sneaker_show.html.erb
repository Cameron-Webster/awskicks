<% @sneaker = locals[:sneak] %>
<div class="card"

  style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
         url('<%= cl_image_path @sneaker.photo, height: 100, width: 100, crop: :fill %>')">
  <div class="card-category">Popular</div>

  <div class="card-description">
    <h2>Some stuff</h2>
    <p>Very cool stuff, useful and smart</p>
  </div>
  <a class="card-link" href="#" ></a>
</div>
 <%= cl_image_tag(@sneaker.photo, height: 100, width: 100, crop: :fill) %>
 <%= @sneaker.rrp %>
 <%= @sneaker.name %>
 <%= link_to 'edit', edit_sneaker_path(@sneaker) %> <%= link_to 'back', sneakers_path %>
<% @sneaker.vendors.each do |vend| %>
  <p><%= vend.name %></p>
  <p>current price: <%= vend.current_price %> pound</p>
  <% end %>
<p><%= link_to 'new vendor', new_sneaker_vendor_path(@sneaker) %></p>
