<div class="navbar-wagon">
  <!-- Logo -->
 <div class="logo">
   BETA
  </div>


  <div class="navbar-wagon-right">

    <!-- Social -->
        <ul class="list-inline social">
          <li><div class="facebook"> <i class="fa fa-facebook" aria-hidden="true"></i></div></li>
          <li><div class="twitter"><i class="fa fa-twitter" aria-hidden="true"></i></div></li>
          <li><div class="insta"><div class="instagram"></div></div></li>
        </ul>
    </div>
  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs">

     <div class="navbar-wagon-item">
        <div class="dropdown nav_menu_item">
        <%= link_to 'Home', root_path %>

     </div></div>
     <div class="navbar-wagon-item">
        <div class="dropdown nav_menu_item">
      <%= link_to 'News', blogs_path %>
     </div></div>

    <!-- Different navigation if login or not -->
    <% if user_signed_in? %>

         <!-- BLOG -->


      <!-- Profile picture and dropdown -->
      <div class="navbar-wagon-item">
        <div class="dropdown">
        <% if Rails.env.production? %>
          <%= cl_image_tag current_user.profile_pic.mini_profile, default_image: 'profile_pic_30px_mzazwe', class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
          <% end %><span class="user_name" data-toggle="dropdown">&nbsp;<%= current_user.first_name %></span>

          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu profile_menu">
            <li>
              <%= link_to buckets_path do %>
                <i class="fa fa-user"></i> <%= t(".profile", default: "Profile") %>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
              <% end %>
            </li>

          </ul>
        </div>
      </div>

      <!-- Notification -->

      <%= render 'shared/nav_notification_section' %>

    <% else %>

      <!-- Login text link -->
      <%= link_to "Sign Up", new_user_registration_path, class: "navbar-wagon-item navbar-wagon-link sign_up_button" %>

      <!-- Login text link -->
      <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-link nav_login_button" %>

    <% end %>



  </div>

  <!-- Dropdown list appearing on mobile only -->

  <div class="navbar-wagon-right hidden-sm hidden-md hidden-lg">
    <div class="navbar-wagon-item">
      <div class="dropdown">
        <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
        <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <% if current_user %>                <li><%= link_to buckets_path do %>
                  <i class="fa fa-user"></i> <%= t(".profile", default: "Profile") %>
                <% end %>
              </li>
              <li><%= link_to 'News', blogs_path %></li>
              <li>
                <%= link_to destroy_user_session_path, method: :delete do %>
                  <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
                <% end %>
              </li>

            <% else %>
                <li><%= link_to "Sign Up", new_user_registration_path, class: "navbar-wagon-item navbar-wagon-link sign_up_button" %></li>
                <li>  <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-link nav_login_button" %></li>
                <li><%= link_to 'News', blogs_path, class: "navbar-wagon-item navbar-wagon-link nav_login_button"  %></li>
            <% end %>
                </ul>
              </div>
             </div>
  </div>
</div>

