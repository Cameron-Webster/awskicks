<%= @sneaker = locals[:sneak] %>
<!-- Modal -->
<div class="modal" id="mod2" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
        <!-- HEADER OF MODAL -->
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="project_new">Kickworks Logo</h4>

      </div>
      <!-- END OF HEADER -->
      <!-- BODY OF MODAL -->
      <div class="modal-body">

           Haaaaaaa <%= locals[:sneak].name %>

           <div class="row">
  <div class="col-md-6">
    <div class="card">


      <!-- render the pin button -->

      <%= render 'shared/bucket_button' %>





    </div>
     <%= cl_image_tag(@sneaker.photo) %>
     <% if @current_pin %>
    <div class="addPriceWatch-<%= @current_pin.id %>">Add Price Watch (already in bucket)
        <%= render 'shared/pricewatch_form', locals: {pin: @current_pin} %>
    </div>
    <% else %>
       <div class="addPriceWatchNoPin-<%= @sneaker.id %>">Add Price Watch (NOT already in bucket)
        <%= render 'shared/bucket_list_and_pricewatch', locals: {sneaker: @sneaker} %>
       </div>
    <% end %>
  <div class="pwatch-<%= @sneaker.id %>"></div>

  </div>
  <div class="col-md-6" style="background-color: black; color: white;">
    <div class="row">
      <div class="col-md-12">

        <h4><%= @sneaker.name %></h4>
        <ul class="list-inline">
          <li><%= @sneaker.style_code %></li>
          <li>Lowest Price: £<%= @sneaker.lowest_price %></li>
          <li><%= @sneaker.gender %></li>
        </ul>
      </div>
    </div>
       <% @sneaker.vendors.each do |vend| %>
    <div class="row">
      <div class="col-md-10">
        <ul class="list-inline">
          <li><%= vend.name %></li>
          <li>£<%= vend.current_price %></li>
        </ul>
        <ul class="list-inline">
          <% vend.uk_available.each do |ob| %>
            <li>Available sizes: <%= ob %></li>
          <% end %>
        </ul>

      </div>
      <div class="col-md-2"></div>
    </div>
      <% end %>



  </div>
</div>
      </div>
    </div>
  </div>
</div>
