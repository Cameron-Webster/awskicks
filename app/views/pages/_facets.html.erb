
<div class="dropdown">
  <button id="dLabel" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" class="genderButton">
    Gender
    <span class="caret"></span>
  </button>
  <ul class="dropdown-menu" aria-labelledby="dLabel">

    <li>Gender</li>

      <% if @conditions.key?(:gender) %>

       <li class="genderbucket filters" data-val="">remove Gender filter </li>

      <% else %>

    <% @sneakers.aggs["gender"]["buckets"].each do |bucket| %>

    <li class="genderbucket filters" data-val="<%= bucket["key"]%>"><%= bucket["key"] %></li>

    <li><%= bucket["doc_count"] %></li>

    <% end %>

    <% end %>


  </ul>
</div>

<div class="dropdown">
  <button id="dLabel" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" class="brandButton">
    Brand
    <span class="caret"></span>
  </button>
  <ul class="dropdown-menu" aria-labelledby="dLabel">

    <li>Brand</li>

      <% if @conditions.key?(:sneak_brand) %>

       <li class="brandbucket filters" data-val="">remove All Brand filter </li>

       <% @sneakers.aggs["sneak_brand"]["buckets"].each do |bucket| %>

      <% if @conditions[:sneak_brand].include? bucket['key'] %>
    <li class="brandbucket filters active" data-val="<%= bucket["key"]%>">Remove <%= bucket["key"] %> Filter</li>

    <li><%= bucket["doc_count"] %></li>
    <% else %>

    <li class="brandbucket filters" data-val="<%= bucket["key"]%>"><%= bucket["key"] %></li>

    <li><%= bucket["doc_count"] %></li>

    <% end %>
    <% end %>

      <% else %>

    <% @sneakers.aggs["sneak_brand"]["buckets"].each do |bucket| %>

    <li class="brandbucket filters" data-val="<%= bucket["key"]%>"><%= bucket["key"] %></li>

    <li><%= bucket["doc_count"] %></li>

    <% end %>

    <% end %>


  </ul>
</div>





