
<div class="dropdown">
  <button id="dLabel" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" class="genderButton">
    Gender
    <span class="caret"></span>
  </button>
  <ul class="dropdown-menu gender_drop_down" aria-labelledby="dLabel">


    <p class="zerofive">Gender</p>

     <% if @conditions.key?(:gender) %>


          <% @sneakers.aggs["gender"]["buckets"].each do |bucket| %>


              <% if @conditions[:gender].split(",").include? bucket['key'] %>

                <div class="facet_group">
                  <input type="checkbox" class="filter-<%= bucket['key'] %>" checked='checked' data-val="<%= bucket['key'] %>">
                  <label for="filter-<%= bucket['key'] %>"><%= bucket["key"] %>&nbsp;<%= bucket["doc_count"] %></label>
                </div>
              <% else %>
                  <div class="facet_group">
                  <input type="checkbox" class="filter-<%= bucket['key'] %>" data-val="<%= bucket['key'] %>">
                  <label for="filter-<%= bucket['key'] %>"><%= bucket["key"] %>&nbsp;<%= bucket["doc_count"] %></label>
                  </div>
              <% end %>
          <% end %>

    <% else %>

          <% @sneakers.aggs["gender"]["buckets"].each do |bucket| %>
          <div class="facet_group">
          <input type="checkbox" class="filter-<%= bucket['key'] %>" data-val="<%= bucket['key'] %>">
          <label for="filter-<%= bucket['key'] %>"><%= bucket["key"] %>&nbsp;<%= bucket["doc_count"] %></label>
          </div>
          <% end %>

    <% end %>



      <div class="right-align">
      <input type="button" value="Update" name="Update" class="purple_button update_button margin-b-10px">
  </div>




  </ul>
</div>

