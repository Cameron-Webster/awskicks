
<%= simple_form_for(@sneaker) do |f| %>
  <%= f.input :name %>
  <%= f.input :style_code %>
  <%= f.input :brand_id, collection: Brand.all %>
  <%= f.input :color %>
  <%= f.input :gender, collection: ["male", "female"] %>
  <%= f.input :photo %>
  <%= f.input :photo_cache, as: :hidden %>
  <%= f.input :alt_photo %>
  <%= f.input :alt_photo_cache, as: :hidden %>

  <%= f.submit %>
<% end %>
