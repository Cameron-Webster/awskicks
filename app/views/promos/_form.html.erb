
 <div class="container-fluid">
<div class="row">
<div class="col-md-6">

<%= simple_form_for(@promo) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :image %>
    <%= f.input :image_cache, as: :hidden %>
    <%= f.input :title %>
    <%= f.input :subtext %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
</div></div></div>
