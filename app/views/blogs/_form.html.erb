<%= simple_form_for(@blog) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
  <%= f.input :title %>
  <%= f.input :subtitle %>
  <%= f.input :photo %>
  <%= f.input :photo_cache, as: :hidden %>
  <%= f.input :photo_two %>
  <%= f.input :photo_two_cache, as: :hidden %>
  <%= f.input :photo_three %>
  <%= f.input :photo_three_cache, as: :hidden %>
  <%= f.input :author %>
  <%= f.input :highlight %>
  <%= f.input :content, input_html: {class: "summernote"} %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>


